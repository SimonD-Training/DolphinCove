<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8" />
        <meta http-equiv="X-UA-Compatible" content="IE=edge" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <title>Staff Dashboard</title>
        <link rel="stylesheet" href="/global.css" />
        <link rel="stylesheet" href="/booking.css" />
        <link
            rel="stylesheet"
            href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.1.1/css/all.min.css"
        />
        <link
            href="https://fonts.googleapis.com/css2?family=Poppins:wght@100;200;300;400;500;600;700;800;900&display=swap"
            rel="stylesheet"
        />

        <link
            rel="stylesheet"
            href="https://use.fontawesome.com/releases/v5.3.1/css/all.css"
            integrity="sha384-mzrmE5qonljUremFsqc01SB46JvROS7bZs3IO2EmfFsd15uHvIt+Y8vEf7N7fWAU"
            crossorigin="anonymous"
        />
        <link
            rel="stylesheet"
            href="https://unpkg.com/tailwindcss@2.2.19/dist/tailwind.min.css"
        />
        <!--Replace with your tailwind.css once created-->
        <link
            rel="stylesheet"
            href="https://cdn.jsdelivr.net/chartist.js/latest/chartist.min.css"
        />
        <link
            rel="stylesheet"
            href="https://cdnjs.cloudflare.com/ajax/libs/normalize/5.0.0/normalize.min.css"
        />
        <link rel="stylesheet" href="/staff.css" />
        <script src="https://cdn.tailwindcss.com"></script>
        <script src="https://code.jquery.com/jquery-3.1.0.min.js"></script>
        <script src="/staff.js"></script>
        <style>
            .nunito {
                font-family: "nunito", font-sans;
            }

            .border-b-1 {
                border-bottom-width: 1px;
            }

            .border-l-1 {
                border-left-width: 1px;
            }

            hover\:border-none:hover {
                border-style: none;
            }

            #sidebar {
                transition: ease-in-out all 0.3s;
                z-index: 9999;
            }

            #sidebar span {
                opacity: 0;
                position: absolute;
                transition: ease-in-out all 0.1s;
            }

            #sidebar:hover {
                width: 150px;
                box-shadow: 0 25px 50px -12px rgba(0, 0, 0, 0.25);
                /*shadow-2xl*/
            }

            #sidebar:hover span {
                opacity: 1;
            }
        </style>
    </head>
    <body>
        <div id="message"></div>
        <section class="nav">
            <div class="logo">
                <a href="/"><img src="/assets/logo.png" alt="" /></a>
            </div>
            <div class="text">
                <ul>
                    <li><a href="/programs">PROGRAMS</a></li>
                    <li><a href="/companies">TOUR COMPANIES</a></li>
                    <li><a href="/booking">BOOKING</a></li>
                    <li><a href="/logout">LOG OUT</a></li>
                </ul>
                <a href="/contact"><button><i class="fa-solid fa-phone"></i> 1-866-393-5158</button></a>
            </div>
        </section>
        <section class="sub-nav">
            <h1>Staff Dashboard</h1>
        </section>
        <section class="flex bg-gray-100 font-sans">
            <main style="width: 100%;">
                <h2 style="text-align: center">Tour Companies</h2>
                <form id="form2">
                    <table>
                        <thead>
                            <tr>
                                <th>Tour Company</th>
                                <th>Tour Company Address</th>
                                <th>Tour Company Description</th>
                                <th>Email</th>
                                <th></th>
                            </tr>
                        </thead>
                        <tfoot>
                            <tr>
                                <td><input required type="text" name="tour_company"></td>
                                <td><input required type="text" name="tour_company_address"></td>
                                <td><input required type="text" name="tour_company_desc"></td>
                                <td><input required type="email" name="email"></td>
                                <td><input required type="submit" value="Create"></td>
                            </tr>
                        </tfoot>
                        <tbody>
                            <% tour_companies.forEach((e)=>{ %>
                            <tr>
                                <td><%=e.tour_company%></td>
                                <td><%=e.tour_company_address%></td>
                                <td><%=e.tour_company_desc%></td>
                                <td><%=e.email%></td>
                                <td>
                                    <a href="/session/staff/manage_tour_co/<%=e.tour_co_id%>">Edit</a>
                                    <a href="javascript: removeCompany(<%=e.tour_co_id%>)">Remove</a>
                                </td>
                            </tr>
                            <% }); %>
                        </tbody>
                    </table>
                </form>
                <br> <br>
                <h2 style="text-align: center">Bookings</h2>
                <form id="form1" style="overflow-x: scroll;">
                    <table class="w-100">
                        <thead>
                            <tr>
                                <th>Fname</th>
                                <th>Lname</th>
                                <th>Voucher</th>
                                <th>Date</th>
                                <th>Payment Method ID</th>
                                <th>Hotel ID</th>
                                <th>Program ID</th>
                                <th></th>
                            </tr>
                        </thead>
                        <tfoot>
                            <tr>
                                <td><input required type="text" name="fname" placeholder="First Name"></td>
                                <td><input required type="text" name="lname" placeholder="Last Name"></td>
                                <td><input required type="number" name="voucher" placeholder="Voucher"></td>
                                <td><input required type="date" name="date" placeholder="Date"></td>
                                <td><input required type="number" name="payment_method_id" placeholder="Payment Method ID"></td>
                                <td><input required type="number" name="hotel_id" placeholder="Hotel ID"></td>
                                <td><input required type="number" name="program_id" placeholder="Program ID"></td>
                                <td><input required type="submit" value="Create"></td>
                            </tr>
                        </tfoot>
                        <tbody>
                            <% bookings.forEach((e)=>{ %>
                            <tr>
                                <td><%=e.fname%></td>
                                <td><%=e.lname%></td>
                                <td><%=e.voucher%></td>
                                <td><%=e.date%></td>
                                <td><%=e.payment_method_id%></td>
                                <td><%=e.hotel_id%></td>
                                <td><%=e.program_id%></td>
                                <td>
                                    <a href="/session/staff/manage_booking/<%=e.booking_id%>">Edit</a>
                                    <a href="javascript: removeBooking(<%=e.booking_id%>)">Remove</a>
                                </td>
                            </tr>
                            <% }); %>
                        </tbody>
                    </table>
                </form>
            </main>
        </section>

        <section class="footer">
            <div class="section1">
                <div>Information</div>
                <div>News</div>
                <div>About Us</div>
                <div>Investor Relations</div>
                <div>Private Policy</div>
                <div>Terms and Conditions</div>
            </div>
            <div class="section2">
                <div>CONTACT US</div>
                <div class="number">1-877-344-3385</div>
                <div>Canada 1-866-793-1905</div>
                <div>United Kindom 0-800-680-0420</div>
                <div>Mexico 01-800-727-5391</div>
                <div>Dominican Republic 1-88-751-9005</div>
                <div>United States 1-866-393-5158</div>
                <div>Contact Us</div>
                <div>PARTNERS:</div>
                <span
                    ><img src="/assets/dd-logo.png" alt="" />
                    <img src="/assets/dc-logo.png" alt=""
                /></span>
            </div>
        </section>
    </body>
</html>
